page-login {
  ion-content.content > .scroll-content {
    padding: 0 !important;
  }

  .content {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: url("../assets/background.png");
    background-size: cover;

    .map {
      position: absolute;
      z-index: 5;
      opacity: 0.2;
      height: 100%;
    }

    .login-content {
      position: relative;
      z-index: 10;
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;

      .logo {
        height: 65px;
        margin-top: 151px;

        @media (min-width: $ipad) {
          height: 85px;
        }
      }

      .account {
        float: left;
        margin-top: 50px;
        margin-bottom: 50px;
      }

      .login-image {
        margin-left: 50px;
        -webkit-transform: scale(1);
        -moz-transform: scale(1);
        -o-transform: scale(1);
        -ms-transform: scale(1);
        transform: scale(1)
      }

      .login:hover .login-image {
        -webkit-transform: scale(0.9);
        -moz-transform: scale(0.9);
        -o-transform: scale(0.9);
        -ms-transform: scale(0.9);
        transform: scale(0.9)
      }

      .search-image {
        margin-top: 50px;
      }

      .picture {
        margin: 38px 0 52px 0;
        height: 83px;

        @media (min-width: $ipad) {
          height: 105px;
        }
      }


      h2 {
        color: white;
        margin: 0 0 150 0;
        font-size: 18px;
        font-family: OpenSans;
      }

      button.button {
        width: 290px;
        height: 61px;
        position: absolute;
        bottom: 65px;
        left: 43px;

        @media (min-width: $ipad) {
          left: 239px;
        }

        @media screen {
          left: auto;
        }
      }
    }

  }
}
